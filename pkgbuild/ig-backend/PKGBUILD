# Maintainer: Konstantin Fedorov <k.a.feodorov@gmail.com>
pkgname=ig-backend
pkgver=0.1
pkgrel=1
epoch=
pkgdesc=""
arch=('x86_64')
url="www.biocad.ru"
license=('unknown')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
install=
changelog=
source=($pkgname.tar.gz)
noextract=()
md5sums=(SKIP)
build() {
	cd "$srcdir/ig-backend/"
	mvn clean package
}
package() {
	cd "$srcdir"
	mkdir "$pkgdir/usr"
	mkdir "$pkgdir/usr/local"
	mkdir "$pkgdir/usr/local/ig-backend"
	cp -r "$srcdir/ig-backend/target/lib/" "$pkgdir/usr/local/ig-backend"
	cp -r "$srcdir/ig-backend/target/ig-backend-1.0-SNAPSHOT.jar" "$pkgdir/usr/local/ig-backend"
}
