# Maintainer: Konstantin Fedorov <k.a.feodorov@gmail.com>
pkgname=ig-tools
pkgver=0.1
pkgrel=1
epoch=
pkgdesc=""
arch=('x86_64')
url="www.biocad.ru"
license=('unknown')
groups=()
depends=('ig-config')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
install=
changelog=
source=($pkgname.tar.gz)
noextract=()
md5sums=(SKIP)
build() {
	cd "$srcdir/ig-tools/ig-snooper/svm_data_generator"
	./rebuild.sh
}
package() {
	cd "$srcdir"
	mkdir "$pkgdir/usr"
	mkdir "$pkgdir/usr/local"
	mkdir "$pkgdir/usr/local/ig-tools"
	mkdir "$pkgdir/usr/local/ig-tools/ig-snooper"
	mkdir "$pkgdir/usr/local/ig-tools/ig-snooper/svm_data_generator"
	cp -r "$srcdir/ig-tools/ig-snooper/svm_data_generator/bin/" "$pkgdir/usr/local/ig-tools/ig-snooper/svm_data_generator/"
	cp -r "$srcdir/ig-tools/ig-snooper/ig_snooper_utils/" "$pkgdir/usr/local/ig-tools/ig-snooper/"
}
